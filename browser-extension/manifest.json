{

  "description": "Arb Companion",
  "manifest_version": 2,
  "name": "Arb Companion",
  "version": "0.1.0",
  "icons": {
    "48": "icons/logo.svg"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "arb_companion@github.com",
      "strict_min_version": "100.0"
    }
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icons/logo.svg",
    "default_title": "Arb Companion",
    "default_popup": "popup/index.html"
  },
  
  "permissions": ["nativeMessaging"]

}
